<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gi_cause_fail"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>

    <TextView
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#E613EA"
    android:elevation="5dp"
    android:gravity="center"
    android:padding="2dp"
    android:text="Causes of vaccine failure"

    android:textColor="@color/white"
    android:textSize="20sp"
    android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#D81B1B"
        android:text="Improper administration."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Vaccination is not done at appropriate time,dose and route."/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#D81B1B"
        android:text="Improper mixing of vaccines."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Vaccine should be properly mixed before use."/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#D81B1B"
        android:text="Quality of vaccine."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Sometimes poor quality of vaccine may lead to vaccine failure."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#D81B1B"
        android:text="Improper timing."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="to early Vaccination or too late vaccination may lead to interference of maternal antibody and too late vaccination may not be effective if the disease is already set."/>





</LinearLayout>