<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gi_vaccine"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#E613EA"
    android:elevation="5dp"
    android:gravity="center"
    android:padding="2dp"
    android:text="Vaccine"

    android:textColor="@color/white"
    android:textSize="20sp"
    android:textStyle="bold" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:text="A vaccine is a biological product which induces immunity against particular disease by inoculating agents that
resembles a disease-causing microorganisms and is often made from weakened pathogens,its toxin or one of the surface proteins." />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_margin="10dp"
        android:text="A vaccination is the proccess of injection of a killed or weakened organism or its components like toxines or surface proteins that
produces specific immunity in the body against that organism." />



</LinearLayout>